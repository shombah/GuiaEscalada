<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_listazonas3">
	
     <LinearLayout
        android:id="@+id/llInfo"
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:background="@drawable/imageview_border_listazonas">
		    <View
		        android:id="@+id/imagenRutas"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:src="@drawable/fotoruta" />
		    
		</LinearLayout>
		
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="0.2"
	        android:background="@drawable/imageview_border_listazonas">
		    <ImageView
		        android:id="@+id/listaRutas"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:src="@drawable/listarutas"
		         />
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1">
		    <ListView
		        android:id="@+id/ListView_lista_rutas"
		        android:layout_width="match_parent"
		        android:layout_height="fill_parent" >
	    	</ListView>
	    </LinearLayout>
    </LinearLayout>
    
     <LinearLayout 
        android:id="@+id/llFoto"
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:visibility="gone">
        
        <ImageView
            android:id="@+id/imagenZonaAmpliada"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent" />
    </LinearLayout>
</RelativeLayout>