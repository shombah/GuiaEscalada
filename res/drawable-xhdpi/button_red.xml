<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true" >
		<shape 	android:shape="rectangle" >
			<padding android:left="7dp" android:right="7dp" />
			<gradient android:angle="90" android:endColor="#dc4b3d" android:startColor="#dc4b3d" android:type="linear" />
			<stroke android:width="1dip" android:color="#dc4b3d" />
			<corners android:radius="8dp" />
		</shape>
    </item>
     <item android:state_enabled="false">
      	 <shape >
            <gradient
                android:startColor="#dc4b3d"
                android:endColor="#dc4b3d"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#dc4b3d" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:right="10dp"/>
        </shape>
    </item>
    <item>
		<shape android:shape="rectangle" >
			<padding android:left="7dp" android:right="7dp"/>
			<gradient android:angle="90" android:endColor="#dc4b3d" android:startColor="#dc4b3d" android:type="linear" />
			<stroke android:width="0.5dp" android:color="#dc4b3d" />
			<corners android:radius="5dp" />
		</shape>
    </item>
</selector>