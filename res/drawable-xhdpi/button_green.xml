<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/green" />
            <stroke
                android:width="1dp"
                android:color="#666" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
     <item android:state_enabled="false">
      	 <shape >
            <gradient
                android:startColor="@color/green"
                android:endColor="@color/green"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#666" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#44CC14"
                android:endColor="#29800B"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#666" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
   
</selector>