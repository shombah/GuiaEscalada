<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <padding android:bottom="10dp" android:left="7dp" android:right="7dp" android:top="10dp" />

            <gradient android:angle="90" android:endColor="#1565C0" android:startColor="#1565C0" android:type="linear" />

            <stroke android:width="1dip" android:color="#1565C0" />

            <corners android:radius="8dp" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <gradient android:angle="270" android:endColor="@color/bg_indisa" android:startColor="@color/bg_indisa" />

            <stroke android:width="1dp" android:color="@color/bg_indisa" />

            <corners android:radius="10dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <padding android:bottom="2dp" android:left="4dp" android:right="4dp" android:top="2dp" />

            <gradient android:angle="90" android:endColor="@color/bg_indisa_inferior" android:startColor="@color/bg_indisa_inferior" android:type="linear" />

            <stroke android:width="0.5dp" android:color="@color/blanco" />

            <corners android:radius="5dp" />
        </shape></item>

</selector>